{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],             // ✅ DOM support for HTML elements like <button>
    "jsx": "react-jsx",                   // ✅ Modern JSX transform (React 17+)
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["react", "react-dom", "node"]      // ✅ Tells TS to load React types
  },
  "include": ["src"]
}
